@page "/logs"
@inject ApiClient Api
@inject NavigationManager Nav

<h2 class="mb-4">Log Entries</h2>

@if (IsLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border"></div>
    </div>
}
else if (Loggings == null || Loggings.Count == 0)
{
    <div class="alert alert-warning">No logs found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Timestamp</th>
            <th>Level</th>
            <th>Message</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var l in Loggings)
        {
            <tr @onclick="() => OpenLog(l.Id)" style="cursor:pointer">
                <td>@l.Timestamp</td>
                <td>@l.Level</td>
                <td>@(l.RawText?.Length > 80 ? l.RawText.Substring(0, 80) + "…" : l.RawText)</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {

    /// <summary>
    /// Contains all log entries loaded from the backend.
    /// </summary>
    List<LogEntryDto> Loggings = new();

    /// <summary>
    /// Indicates whether the log list is currently being loaded.
    /// </summary>
    bool IsLoading = true;

    /// <summary>
    /// Loads all logs from the API when the page is initialized.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        Loggings = await Api.GetLogsAsync();
        IsLoading = false;
    }

    /// <summary>
    /// Navigates to the detailed view for the selected log entry.
    /// </summary>
    /// <param name="id">The ID of the log entry to view.</param>
    void OpenLog(string id) => Nav.NavigateTo($"/log/{id}");
}