@page "/logs"
@inject ApiClient Api
@inject NavigationManager Nav

<h2 class="mb-4">Log Entries</h2>

@if (IsLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border"></div>
    </div>
}
else if (Loggings == null || Loggings.Count == 0)
{
    <div class="alert alert-warning">Keine Logs gefunden.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Timestamp</th>
            <th>Level</th>
            <th>Message</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var l in Loggings)
        {
            <tr @onclick="() => OpenLog(l.Id)" style="cursor:pointer">
                <td>@l.Timestamp</td>
                <td>@l.Level</td>
                <td>@(l.RawText?.Length > 80 ? l.RawText.Substring(0, 80) + "…" : l.RawText)</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    List<LogWatchAiWebApp.Shared.Models.LogEntryDto> Loggings = new();
    bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        Loggings = await Api.GetLogsAsync();
        IsLoading = false;
    }

    void OpenLog(string id) => Nav.NavigateTo($"/log/{id}");
}