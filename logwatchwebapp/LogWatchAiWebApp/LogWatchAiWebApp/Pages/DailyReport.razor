@page "/dailyreports"
@inject ApiClient Api

<h2 class="mb-4">Daily Reports</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">

        <div class="row g-3">

            <div class="col-md-4">
                <label class="form-label">Date</label>
                <input type="date" class="form-control"
                       @bind="SelectedDateInput"
                       @bind:format="yyyy-MM-dd" />
            </div>

            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-primary w-100" @onclick="LoadReport">
                    Load
                </button>
            </div>

        </div>

    </div>
</div>

@if (IsLoading)
{
    <div class="text-center my-4">
        <div class="spinner-border"></div>
    </div>
}
else if (Report == null)
{
    <div class="alert alert-info">Please select a date to load a report.</div>
}
else
{
    <h4 class="mb-3">Report</h4>

    <div class="card">
        <div class="card-body">
            <pre>@FormattedJson</pre>
        </div>
    </div>
}

@code {
    /// <summary>
    /// Stores the user-selected date used to request a daily report.
    /// </summary>
    DateTime SelectedDateInput = DateTime.Today;

    /// <summary>
    /// Contains the loaded daily report from the backend.
    /// </summary>
    DailyReportDto? Report;

    /// <summary>
    /// Indicates whether the report is currently being loaded.
    /// </summary>
    bool IsLoading = false;

    /// <summary>
    /// Pretty-printed JSON representation of the report.
    /// Used for visual display.
    /// </summary>
    string FormattedJson =>
        System.Text.Json.JsonSerializer.Serialize(
            Report,
            new System.Text.Json.JsonSerializerOptions { WriteIndented = true }
        );

    /// <summary>
    /// Loads the daily report for the selected date from the API.
    /// </summary>
    async Task LoadReport()
    {
        IsLoading = true;

        string formattedDate = SelectedDateInput.ToString("yyyy-MM-dd");

        Console.WriteLine($"[DailyReports] Sending Date: {formattedDate}");

        Report = await Api.GetDailyReportAsync(formattedDate);

        IsLoading = false;
    }
}
